{
  "name": "@bandeira-tech/b3nd-sdk",
  "version": "0.3.2",
  "description": "Universal persistence SDK with URI-based addressing, encryption, and multi-backend support (PostgreSQL, HTTP, WebSocket, in-memory)",
  "exports": {
    ".": "./src/mod.ts",
    "./types": "./src/types.ts",
    "./auth": "./auth/mod.ts",
    "./encrypt": "./encrypt/mod.ts",
    "./clients/memory": "./clients/memory/mod.ts",
    "./clients/http": "./clients/http/mod.ts",
    "./clients/websocket": "./clients/websocket/mod.ts",
    "./clients/postgres": "./clients/postgres/mod.ts",
    "./wallet": "./wallet/mod.ts",
    "./apps": "./apps/mod.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/encoding": "jsr:@std/encoding@^1.0.10"
  },
  "tasks": {
    "test": "deno test -A tests/",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "check": "deno check src/mod.ts",
    "publish:jsr": "deno publish --allow-dirty"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ]
  },
  "nodeModulesDir": "auto",
  "publish": {
    "exclude": [
      "dist/",
      "build/",
      "node_modules/",
      "build*.ts",
      "tests/",
      "clients/indexed-db/",
      "clients/local-storage/",
      ".env*",
      "*.test.ts",
      "*.js"
    ]
  }
}
