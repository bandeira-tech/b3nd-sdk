{
  "name": "b3nd",
  "version": "0.6.0",
  "description": "B3nd SDK development tools - skills for building apps with the B3nd universal persistence protocol",
  "author": {
    "name": "Bandeira Tech",
    "url": "https://github.com/bandeira-tech"
  },
  "homepage": "https://github.com/bandeira-tech/b3nd",
  "repository": "https://github.com/bandeira-tech/b3nd",
  "license": "MIT",
  "keywords": [
    "b3nd",
    "persistence",
    "sdk",
    "deno",
    "typescript",
    "react",
    "wallet",
    "authentication"
  ],
  "mcpServers": {
    "b3nd": {
      "command": "deno",
      "args": ["run", "-A", "${CLAUDE_PLUGIN_ROOT}/.claude-plugin/mcp-server/mod.ts"],
      "env": {
        "B3ND_BACKENDS": "${B3ND_BACKENDS:-local=http://localhost:9942}"
      }
    }
  }
}
