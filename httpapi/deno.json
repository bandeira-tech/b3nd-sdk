{
  "tasks": {
    "start": "deno run -A --watch src/mod.ts",
    "dev": "deno task start",
    "test": "deno test --allow-net",
    "test:watch": "deno test --watch --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "hono": "npm:hono",
    "zod": "npm:zod"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "exclude": ["deps"],
    "options": {
      "semiColons": true,
      "singleQuote": true
    }
  },
  "lint": {
    "exclude": ["deps"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
