{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env src/server.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch src/server.ts",
    "start:old": "deno run -A --watch src/mod.ts",
    "test": "deno test --allow-net",
    "test:watch": "deno test --watch --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "hono": "npm:hono",
    "zod": "npm:zod",
    "@std/http": "jsr:@std/http@1",
    "@std/encoding": "jsr:@std/encoding@1",
    "@std/fs": "jsr:@std/fs@1"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "exclude": ["deps"],
    "options": {
      "semiColons": true,
      "singleQuote": false
    }
  },
  "lint": {
    "exclude": ["deps"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
