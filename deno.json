{
  "name": "@bandeira-tech/b3nd-sdk",
  "version": "0.7.1",
  "description": "Universal persistence SDK with URI-based addressing, encryption, and multi-backend support (PostgreSQL, HTTP, WebSocket, in-memory)",
  "exports": "./src/mod.ts",
  "nodeModulesDir": "auto",
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "canonicalize": "npm:canonicalize@2.0.0"
  },
  "tasks": {
    "check": "deno check src/mod.ts",
    "test": "deno test --allow-all libs/",
    "test:integration:postgres": "deno test --allow-all libs/b3nd-client-postgres/",
    "test:integration:mongo": "deno test --allow-all libs/b3nd-client-mongo/",
    "publish:jsr": "bash scripts/prepublish.sh && deno publish --allow-dirty; bash scripts/postpublish.sh"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ]
  },
  "publish": {
    "exclude": [
      "!_vendor/",
      "apps/",
      "libs/",
      "tests/",
      "skills/",
      ".github/",
      "scripts/",
      "dist/",
      "build/",
      "node_modules/",
      "build*.ts",
      ".env*",
      "*.test.ts",
      "*.js",
      "*.lock",
      "package.json",
      "package-lock.json",
      "tsup.config.ts",
      "tsconfig.web.json",
      ".npmignore",
      "Makefile",
      "BROWSER_USER_MANUAL.md"
    ]
  },
  "workspace": [
    "libs/b3nd-core",
    "libs/b3nd-compose",
    "libs/b3nd-hash",
    "libs/b3nd-msg",
    "libs/b3nd-servers",
    "libs/b3nd-client-memory",
    "libs/b3nd-client-http",
    "libs/b3nd-client-ws",
    "libs/b3nd-client-postgres",
    "libs/b3nd-client-mongo",
    "libs/b3nd-client-indexeddb",
    "libs/b3nd-client-localstorage",
    "libs/b3nd-combinators",
    "libs/b3nd-testing",
    "libs/b3nd-auth",
    "libs/b3nd-encrypt",
    "libs/b3nd-wallet",
    "libs/b3nd-wallet-server",
    "libs/b3nd-apps",
    "libs/b3nd-managed-node",
    "apps/apps-node",
    "apps/b3nd-cli",
    "apps/b3nd-node",
    "apps/sdk-inspector",
    "apps/wallet-node",
    "tests"
  ]
}
